{
    "name": "dgafka/authorization-security",
    "type": "library",
    "description": "Take care of authorization concerns for you. Takes out security out of your domain logic and provides clean and easy API to do it.",
    "keywords": ["authorization", "security", "annotations", "secure", "expression"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "dgafka.mail@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "symfony/expression-language": "2.7.*",
        "pimple/pimple": "3.0.*",
        "goaop/framework": "0.6.1"
    },
    "require-dev": {
        "phpspec/phpspec" : "2.2.*",
        "behat/behat" : "3.0.*",
        "phpunit/phpunit" : "4.7.*",
        "mikey179/vfsStream": "~1.5.0"
    },
    "autoload": {
        "psr-4": {
            "Dgafka\\AuthorizationSecurity\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dgafka\\Fixtures\\": "tests/Fixtures"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
